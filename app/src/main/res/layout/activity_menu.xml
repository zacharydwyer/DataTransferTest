<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MenuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:padding="24dp"
        android:layout_margin="12dp"
        android:text="@string/welcome_string"/>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="165dp"
        android:padding="24dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/colorCustom">

        <Button
            android:id="@+id/single_value_activity_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/single_value_activity_string"/>

        <Button
            android:id="@+id/multi_value_activity_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/multi_value_activity_string"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="165dp"
        android:padding="24dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:background="@color/colorCustom">

        <TextView
            android:text="@string/enter_text_string"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/text_to_send_to_activity_edit_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>


</LinearLayout>
